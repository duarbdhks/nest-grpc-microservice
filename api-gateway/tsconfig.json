{
  "compilerOptions": {
    "module": "commonjs",
    "declaration": true,
    "removeComments": true,
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    "target": "es2017",
    "sourceMap": true,
    "outDir": "./dist",
    "baseUrl": "./src",
    "incremental": true,
    "paths": {
      "@server/*": ["src/*"],
      "@common/*": ["src/common/*"],
      "@common-util/*": ["src/common-util/*"],
      "@entity/*": ["src/shared/entity/*"],
      "@enum/*": ["src/shared/enum/*"],
      "@interface/*": ["src/shared/interface/*"],
      "@modules/*": ["src/modules/*"],
      "@shared/*": ["src/shared/*"],
    }
  },
  "include": [
    "src/**/*"
  ],
  "exclude": [
    "node_modules",
    "dist"
  ]
}
